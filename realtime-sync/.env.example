# Enhanced Realtime Sync Service Configuration

# Server Configuration
NODE_ENV=development
REALTIME_PORT=3001
REALTIME_HOST=0.0.0.0
MONITORING_PORT=3002

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=mem0:realtime:

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=mem0-realtime
RABBITMQ_PREFETCH=100
RABBITMQ_HEARTBEAT=60

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS_PER_USER=10
WS_COMPRESSION_THRESHOLD=1024
WS_ENABLE_BROADCAST=true
WS_EVENT_BUFFER_SIZE=1000
WS_RECONNECT_WINDOW=300000
WS_MAX_MESSAGE_SIZE=1048576

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_POINTS=1000
RATE_LIMIT_DURATION=60
RATE_LIMIT_BLOCK_DURATION=60

# Event Replay Configuration
EVENT_REPLAY_ENABLED=true
EVENT_REPLAY_RETENTION_DAYS=7
EVENT_REPLAY_BATCH_SIZE=100
EVENT_REPLAY_MAX_EVENTS=10000
EVENT_REPLAY_COMPRESSION=6

# Pattern Matching Configuration
MAX_PATTERNS_PER_CONNECTION=50
PATTERN_CACHE_SIZE=1000
PATTERN_CACHE_TTL=3600

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Security Configuration
CORS_ORIGINS=*
COMPRESSION_ENABLED=true
HELMET_ENABLED=true