{
  "name": "@recall/memory-storage-service",
  "version": "1.0.0",
  "description": "Memory Storage Service for Recall - Core data persistence layer",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test test/**/*.test.js",
    "test:integration": "node --test test/integration/**/*.test.js",
    "test:performance": "node test/performance/benchmark.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build -t recall/memory-storage .",
    "docker:run": "docker run -p 3000:3000 recall/memory-storage",
    "health": "curl http://localhost:3000/health/ready",
    "metrics": "curl http://localhost:3000/metrics"
  },
  "keywords": [
    "memory",
    "storage",
    "postgresql",
    "redis",
    "cache",
    "microservice",
    "recall"
  ],
  "author": "Recall Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^5.8.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n3wth/recall.git",
    "directory": "microservices-design/services/memory-storage"
  },
  "bugs": {
    "url": "https://github.com/n3wth/recall/issues"
  },
  "homepage": "https://recall.newth.ai"
}