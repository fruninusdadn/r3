{
  "name": "memory-graph-service",
  "version": "1.0.0",
  "description": "Graph-based memory management microservice",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node tests/test-runner.js",
    "docker:up": "cd docker && docker-compose up -d",
    "docker:down": "cd docker && docker-compose down",
    "setup": "npm run docker:up && sleep 10 && npm run init-db",
    "init-db": "node scripts/init-database.js"
  },
  "dependencies": {
    "apollo-server-express": "^3.12.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-type-json": "^0.3.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "neo4j-driver": "^5.15.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "graph",
    "memory",
    "neo4j",
    "microservice"
  ],
  "author": "Newth.ai",
  "license": "MIT"
}
